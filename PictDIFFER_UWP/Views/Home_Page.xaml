<Page
    x:Class="PictDIFFER.Views.Home_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PictDIFFER.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loading="Page_Loading"
    SizeChanged="Page_SizeChanged">

    <!--Define Main Row-->
    <Grid Background="#808080">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Header Menu-->
        <!--Main Row 1-->
        <StackPanel Grid.Row="0" Margin="18,15,15,15">
            <Grid x:Name="HeaderBanner" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="&#xE99A;" FontFamily="Segoe MDL2 Assets" FontWeight="Normal" Style="{StaticResource SubheaderTextBlockStyle}"/>
                </StackPanel>
                <Rectangle Grid.Column="1" Margin="15,0,15,0" Width="2" Height="Auto" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                <Image Grid.Column="2" Width="Auto" Height="Auto" Margin="0,-5,0,0" Source="../Assets/Header-PictDIFFER-200.png" Stretch="Fill" HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>
        <!--Header Menu-->
        <!--Main Row 1-->

        <!--Line Horizontal-->
        <!--Main Row 2-->
        <StackPanel Grid.Row="1" Margin="50,5,50,5">
            <Rectangle Margin="125,0,125,0" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
            <Rectangle Margin="50,0,50,0" Width="Auto" Height="1" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
            <Rectangle Margin="125,0,125,0" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
        </StackPanel>
        <!--Line Horizontal-->
        <!--Main Row 2-->

        <!--Pivot Menu-->
        <!--Main Row 3-->
        <Pivot Grid.Row="2">
            <!--Pivot 1-->
            <PivotItem Header="Start Page" Margin="0,0,0,0">
                <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Pivot 1 Column 1-->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="&#xE1C3;" Margin="15,20,0,0" FontFamily="Segoe MDL2 Assets" FontWeight="Normal" Style="{StaticResource SubheaderTextBlockStyle}"/>
                    </StackPanel>
                    <!--Pivot 1 Column 1-->

                    <!--Pivot 1 Column 2-->
                    <Rectangle Grid.Column="1" Margin="15,20,0,20" Width="2" Height="Auto" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <!--Pivot 1 Column 2-->

                    <!--Pivot 1 Column 3-->
                    <ScrollViewer Grid.Column="2" Margin="15,20,0,20" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="15,0,15,10" FontSize="18">
                                <Run FontWeight="SemiBold">PictDIFFER</Run> merupakan aplikasi yang berfungsi untuk mengecek dan membandingkan kualitas suatu Citra Digital hasil pengolahan Steganografi <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Stego Image)"/> dengan Citra Digital asli <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Cover Image)"/>.
                    Adapun Format Citra Digital yang didukung adalah Citra Digital dengan Format PNG dengan kedalaman warna 32bit / (BGRA).
                            </TextBlock>
                            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="15,5,15,5" >
                    <Run Text="&#xE1A6;" FontFamily="Segoe MDL2 Assets"/>
                    <Run Text="Feature + Benefit"/>
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="10,10,15,10" FontSize="18">                            
                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="  Fast Calculate and Detection" FontStretch="SemiCondensed" FontWeight="SemiBold"/><LineBreak/>
                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="  User Friendly Concept &amp; Easy to Use" FontStretch="SemiCondensed" FontWeight="SemiBold"/><LineBreak/>
                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="  Build with C# Windows UWP (Universal Windows Platform)" FontWeight="SemiBold" FontStretch="SemiCondensed"/><LineBreak/>
                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="  Support on All Windows 10 Platform (PC / Mobile)" FontWeight="SemiBold" FontStretch="SemiCondensed"/>
                            </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                    <!--Pivot 1 Column 3-->
                </Grid>
            </PivotItem>
            <!--Pivot 1-->

            <!--Pivot 2-->
            <PivotItem Header="Getting Started" Margin="0,0,0,0">
                <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Pivot 2 Column 1-->
                    <StackPanel Grid.Column="0" Margin="15,20,0,0">
                        <TextBlock Text="&#xE128;" FontFamily="Segoe MDL2 Assets" FontWeight="Normal" Style="{StaticResource SubheaderTextBlockStyle}"/>
                    </StackPanel>
                    <!--Pivot 2 Column 1-->

                    <!--Pivot 2 Column 2-->
                    <Rectangle Grid.Column="1" Margin="15,20,0,20" Width="2" Height="Auto" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <!--Pivot 2 Column 2-->

                    <!--Pivot 2 Column 3-->
                    <ScrollViewer Grid.Column="2" Margin="15,20,0,20" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="stack_embed_file" Orientation="Vertical">
                            <TextBlock Margin="15,0,15,15" Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18">
                                Terdapat 2 Fitur yang menjadi fungsi dasar dari aplikasi ini antara lain <Run FontWeight="SemiBold">Stego Image Test</Run> dan <Run FontWeight="SemiBold">Embedded File Test</Run>.
                            </TextBlock>
                            <StackPanel Margin="-10,5,0,15">
                                <Rectangle Margin="125,0,125,0" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                <Rectangle Margin="50,0,50,0" Width="Auto" Height="1" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                <Rectangle Margin="125,0,125,0" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            </StackPanel>
                            <Grid Margin="15,0,15,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Grid.Row="0">
                                    <Run Text="&#xE7AA;" FontFamily="Assets/Fonts/HOLOMDL2.TTF#HoloLens MDL2 Assets"/>
                                    <Run Text="Stego Image Test"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="1" FontSize="18">
                                        Merupakan fitur yang berfungsi untuk menguji Stego Image dan Cover Image dengan menggunakan parameter-parameter uji berikut:
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Grid.Row="2">
                                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="  Histogram Data" FontStretch="SemiCondensed" FontWeight="SemiBold"/><LineBreak/>
                                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="  Pixel Identify" FontStretch="SemiCondensed" FontWeight="SemiBold"/><LineBreak/>
                                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="  Count MSE &amp; PSNR" FontStretch="SemiCondensed" FontWeight="SemiBold"/>
                                </TextBlock>
                                <Grid Margin="0,0,0,0" Grid.Row="3">
                                    <Rectangle Margin="125,20,125,20" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                </Grid>
                                <TextBlock Style="{StaticResource TitleTextBlockStyle}"  Grid.Row="4">
                                    <Run Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="Histogram Data"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Margin="5" Grid.Row="5">
                                    Merupakan fitur yang berfungsi untuk melihat komposisi warna sesuai dengan warna dasar dari Citra Digital, yakni (Blue, Green, Red)
                                    <LineBreak/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Grid.Row="6">
                                    <Run Text="&#xE80A;" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="Pixel Identify"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Margin="5" Grid.Row="7">
                                        Merupakan fitur yang berfungsi untuk melihat komposisi warna dasar dari Citra Digital, yakni (Blue, Green, Red, Alpha) pada posisi koordinat Pixel tertentu.
                                    <LineBreak/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource TitleTextBlockStyle}"  Grid.Row="8">
                                    <Run Text="&#xEB3C;" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="Count MSE &amp; PSNR"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Margin="5" Grid.Row="9">
                                    MSE <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Mean Square Error)"/> adalah nilai error kuadrat rata-rata antara Citra Digital hasil Pengolahan Steganografi <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Stego Image)"/> dengan Citra Digital asli <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Cover Image)"/>. Adapun PSNR <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Peak Signal Noise Ratio)"/> adalah perbandingan antara nilai maksimum dari sinyal yang diukur dengan besarnya derau yang berpengaruh pada sinyal tersebut. PSNR biasanya diukur dalam satuan <Run FontWeight="SemiBold" FontStyle="Italic" Text="Decibel / (db)"/>. MSE &amp; PSNR biasa digunakan untuk mengetahui hasil/kualitas teknik Steganografi yang digunakan. Dengan parameter yang digunakan yakni selisih antara nilai <Run FontWeight="SemiBold" FontStyle="Italic" Text="Pixel"/> Citra Digital asli sebelumnya <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Cover Image)"/> dan Citra Digital sesudah diolah <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Stego Image)"/>.
                                    <LineBreak/>
                                </TextBlock>
                            </Grid>

                            <Grid Margin="0,0,0,0" x:Name="cover_border_horizontal">
                                <Rectangle Margin="15,20,30,45" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            </Grid>

                            <Grid Margin="15,0,15,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Grid.Row="0">
                                    <Run Text="&#xE7B4;" FontFamily="Assets/Fonts/HOLOMDL2.TTF#HoloLens MDL2 Assets"/>
                                    <Run Text="Embedded File Test"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Grid.Row="1">
                                    Merupakan fitur yang berfungsi untuk menguji file asli <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Original File)"/> dengan file hasil ekstraksi Stego Image <Run FontWeight="SemiBold" FontStyle="Italic" Text="(Embedded File)"/>. Adapun proses pengujian menggunakan parameter-parameter uji berikut:
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Grid.Row="2">
                                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="  MD5 Hash Identify" FontStretch="SemiCondensed" FontWeight="SemiBold"/><LineBreak/>
                                    <Run Text="&#xE001;" FontSize="22" FontWeight="SemiBold" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="  SHA1 Hash Identify" FontStretch="SemiCondensed" FontWeight="SemiBold"/>
                                </TextBlock>
                                <Grid Margin="0,0,0,0" Grid.Row="3">
                                    <Rectangle Margin="125,20,125,20" Width="Auto" Height="2" Fill="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                </Grid>
                                <TextBlock Style="{StaticResource TitleTextBlockStyle}"  Grid.Row="4">
                                    <Run Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="MD5 Hash Identify"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Margin="5" Grid.Row="5">
                                    Merupakan fitur yang berfungsi untuk melakukan perhitungan nilai hash menggunakan algoritma MD5 dari suatu file dan kemudian membandingkannya dengan file lainnya.
                                    <LineBreak/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Grid.Row="6">
                                    <Run Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets"/>
                                    <Run Text="SHA1 Hash Identify"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Margin="5" Grid.Row="7">
                                    Merupakan fitur yang berfungsi untuk melakukan perhitungan nilai hash menggunakan algoritma SHA1 dari suatu file dan kemudian membandingkannya dengan file lainnya.                                   <LineBreak/>
                                </TextBlock>

                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    <!--Pivot 2 Column 3-->
                </Grid>
            </PivotItem>
            <!--Pivot 2-->
        </Pivot>
        <!--Pivot Menu-->
        <!--Main Row 3-->
    </Grid>
    <!--Define Main Row-->
</Page>